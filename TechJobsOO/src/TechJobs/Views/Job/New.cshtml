@model TechJobs.ViewModels.NewJobViewModel


<form asp-controller="Job" asp-action="New" method="post">
    <!--<div asp-validation-summary="All"></div>-->

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmployerID"></label>
        <select asp-for="EmployerID" asp-items="Model.Employers" id="EmployerID"></select>
        <span asp-validation-for="EmployerID"></span>

    </div>
    <div class="form-group">
        <label asp-for="LocationID"></label>
        <select asp-for="LocationID" asp-items="Model.Locations" id="LocationID"></select>
        <span asp-validation-for="LocationID"></span>

    </div>
   
    <div class="form-group">
        <label asp-for="CoreCompetencyID">Skills</label>
        <select asp-for="CoreCompetencyID" asp-items="Model.CoreCompetencies" id="CoreCompetencyID"></select>
        <span asp-validation-for="CoreCompetencyID"></span>

    </div>
    <div class="form-group">
        <label asp-for="PositionTypeID"></label>
        <select asp-for="PositionTypeID" asp-items="Model.PositionTypes" id="PositionTypeID"></select>
        <span asp-validation-for="PositionTypeID"></span>

    </div>

    <input type="submit" value="Add Job" />
</form>
